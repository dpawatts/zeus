<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" default-lazy="false">

	<!-- DatabaseFolder -->
	<class name="Zeus.FileSystem.DatabaseFolder, Zeus" table="zeusFileSystemFolders">
		<cache usage="nonstrict-read-write" />

		<id name="ID" column="ID" type="Int32" unsaved-value="0">
			<generator class="native"/>
		</id>
		
		<bag name="Files" cascade="all" generic="true" inverse="true" lazy="true">
			<cache usage="read-write" />
			<key column="FolderID" />
			<one-to-many class="Zeus.FileSystem.DatabaseFile, Zeus"/>
		</bag>

		<bag name="Folders" cascade="all" generic="true" inverse="true" lazy="true">
			<cache usage="read-write" />
			<key column="ParentID" />
			<one-to-many class="Zeus.FileSystem.DatabaseFolder, Zeus"/>
		</bag>
		
		<many-to-one name="ParentFolder" column="ParentID" class="Zeus.FileSystem.DatabaseFolder, Zeus" />
		
		<property name="Name" type="String" not-null="true" length="500" />
	</class>

	<!-- DatabaseFile -->
	<class name="Zeus.FileSystem.DatabaseFile, Zeus" table="zeusFileSystemFiles">
		<cache usage="nonstrict-read-write" />

		<id name="ID" column="ID" type="Int32" unsaved-value="0">
			<generator class="native"/>
		</id>

		<many-to-one name="Folder" column="FolderID" class="Zeus.FileSystem.DatabaseFolder, Zeus" />

		<property name="Name" type="String" not-null="true" length="500" />
		<property name="Data" type="Serializable" length="2147483647" />
	</class>

</hibernate-mapping>