<viewdata model="Zeus.Templates.Mvc.ViewModels.RegistrationPageVerifyViewModel"/>

<div id="registrationVerification">
	<p if="Model.Successful">
		Thank you. Your user account has been verified. Please
		use the login form at the bottom of the page to login.
	</p>
	<p if="!Model.Successful">
		Your user account could not be verified for the following reason:
		${Model.ErrorMessage}
	</p>
</div>